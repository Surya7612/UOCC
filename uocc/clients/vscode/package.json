{
  "name": "uocc-vscode",
  "displayName": "UOCC Coach",
  "description": "Code coaching assistant inside VS Code (analyze, hints, run checks, voice, answers).",
  "version": "0.0.1",
  "publisher": "uocc",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:uocc.coachFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uocc.coachFile",
        "title": "UOCC: Coach this file"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:ext && npm run build:panel",
    "build:ext": "tsc -p tsconfig.extension.json",
    "build:panel": "tsc -p tsconfig.panel.json",
    "watch": "npm run watch:ext & npm run watch:panel",
    "watch:ext": "tsc -w -p tsconfig.extension.json",
    "watch:panel": "tsc -w -p tsconfig.panel.json",
    "package": "vsce package",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.25",
    "@types/vscode": "^1.85.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
